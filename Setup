#include <Adafruit_MPU6050.h>
#include <Adafruit_Sensor.h>
#include <Wire.h>

int pullButton_pin = 2;
int twistButton_pin = 3;

int Score = 0; //elk juiste +1
int Level = 1; //Om de 5 scores +1
int prevLevel = 1;
int speedTime = 2000;
 
const int shakeThreshold = 25; //Treshold Bob-it

void setup() {
  Serial.begin(115200);

  pinMode(pullButton_pin, INPUT_PULLDOWN);
  pinMode(twistButton_pin, INPUT_PULLDOWN);

//Setup Gyroscoop 
  while (!Serial) 
    delay(10); 

  Serial.println("Adafruit MPU6050 test!");

  // Try to initialize!
  if (!mpu.begin()) {
    Serial.println("Failed to find MPU6050 chip");
    while (1) {
      delay(10);
    }
  }
  Serial.println("MPU6050 Found!");

}

void loop() {

  if (Score == 5){ //Level system
    Level = prevLevel + 1;
    prevLevel = Level;
    Score = 0;
  }

